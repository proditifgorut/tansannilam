<script setup lang="ts">
import { inject, computed } from 'vue'
import { RouterLink } from 'vue-router'
import { X, Plus, Minus, ShoppingBag, CreditCard, Banknote, Smartphone } from 'lucide-vue-next'

const cart = inject('cart') as any

const totalPrice = computed(() =>
  cart.items.value.reduce((total: number, item: any) => total + (item.price * item.quantity), 0)
)

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('id-ID', {
    style: 'currency',
    currency: 'IDR',
    minimumFractionDigits: 0
  }).format(price)
}
</script>

<template>
  <!-- Overlay -->
  <div
    v-show="cart.isOpen.value"
    @click="cart.toggle"
    class="fixed inset-0 bg-black bg-opacity-50 z-50 transition-opacity duration-300"
  ></div>

  <!-- Cart Panel -->
  <div
    :class="[
      'fixed right-0 top-0 h-full w-full max-w-md bg-white shadow-2xl transform transition-transform duration-300 z-50',
      cart.isOpen.value ? 'translate-x-0' : 'translate-x-full'
    ]"
  >
    <div class="flex flex-col h-full">
      <!-- Header -->
      <div class="flex items-center justify-between p-6 border-b border-cream-200">
        <h2 class="text-xl font-semibold text-brown-800 flex items-center">
          <ShoppingBag class="w-6 h-6 mr-2" />
          Keranjang Belanja
        </h2>
        <button
          @click="cart.toggle"
          class="p-2 text-brown-600 hover:text-brown-800 transition-colors duration-200"
        >
          <X class="w-6 h-6" />
        </button>
      </div>

      <!-- Cart Items -->
      <div class="flex-1 overflow-y-auto p-6">
        <div v-if="cart.items.value.length === 0" class="text-center py-12">
          <ShoppingBag class="w-16 h-16 text-cream-400 mx-auto mb-4" />
          <p class="text-cream-600 text-lg">Keranjang Anda kosong</p>
          <p class="text-cream-500 text-sm mt-2">Tambahkan daun nilam premium untuk memulai!</p>
        </div>

        <div v-else class="space-y-4">
          <div
            v-for="item in cart.items.value"
            :key="`${item.id}-${item.size}`"
            class="flex items-center space-x-4 p-4 bg-cream-50 rounded-xl"
          >
            <img
              :src="item.image"
              :alt="item.name"
              class="w-16 h-16 object-cover rounded-lg"
            />
            <div class="flex-1">
              <h3 class="font-semibold text-brown-800">{{ item.name }}</h3>
              <p class="text-sm text-brown-600">Ukuran: {{ item.size }}</p>
              <p class="text-orange-600 font-semibold">{{ formatPrice(item.price) }}</p>
            </div>
            <div class="flex items-center space-x-2">
              <button
                @click="cart.updateQuantity(item.id, item.size, item.quantity - 1)"
                class="w-8 h-8 bg-cream-200 hover:bg-cream-300 rounded-full flex items-center justify-center transition-colors duration-200"
              >
                <Minus class="w-4 h-4" />
              </button>
              <span class="w-8 text-center font-semibold">{{ item.quantity }}</span>
              <button
                @click="cart.updateQuantity(item.id, item.size, item.quantity + 1)"
                class="w-8 h-8 bg-cream-200 hover:bg-cream-300 rounded-full flex items-center justify-center transition-colors duration-200"
              >
                <Plus class="w-4 h-4" />
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <div v-if="cart.items.value.length > 0" class="border-t border-cream-200 p-6 space-y-4">
        <div class="flex items-center justify-between text-lg font-semibold">
          <span class="text-brown-800">Total:</span>
          <span class="text-orange-600">{{ formatPrice(totalPrice) }}</span>
        </div>
        
        <div class="text-center">
            <span class="text-sm text-brown-600">Metode Pembayaran Aman:</span>
            <div class="flex justify-center items-center space-x-4 mt-2">
                <Banknote class="w-6 h-6 text-gray-500" title="Transfer Bank"/>
                <CreditCard class="w-6 h-6 text-gray-500" title="Kartu Kredit/Debit"/>
                <Smartphone class="w-6 h-6 text-gray-500" title="GoPay, OVO, Dana"/>
                <span class="font-bold text-gray-500 text-sm">Alfamart</span>
            </div>
        </div>

        <RouterLink 
          to="/checkout"
          @click="cart.toggle"
          class="w-full btn-primary text-lg py-4 block text-center"
        >
          Lanjutkan ke Checkout
        </RouterLink>
        <p class="text-xs text-center text-cream-600">
          Gratis ongkir untuk pesanan di atas Rp 200.000
        </p>
      </div>
    </div>
  </div>
</template>
