<script setup lang="ts">
import { ref, computed, inject } from 'vue'
import { useRouter } from 'vue-router'
import { Lock, ArrowLeft, Banknote, Smartphone } from 'lucide-vue-next'
import PaymentMethodModal from '../components/PaymentMethodModal.vue'

const cart = inject('cart') as any
const router = useRouter()

const shippingCost = ref(15000)

const subtotal = computed(() =>
  cart.items.value.reduce((total: number, item: any) => total + (item.price * item.quantity), 0)
)

const total = computed(() => subtotal.value + shippingCost.value)

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('id-ID', {
    style: 'currency',
    currency: 'IDR',
    minimumFractionDigits: 0
  }).format(price)
}

const form = ref({
  email: '',
  phone: '',
  name: '',
  address: '',
  city: '',
  postalCode: '',
})

const paymentMethod = ref<{ type: string; detail: string | null }>({ type: '', detail: null });
const isPaymentModalOpen = ref(false)
const modalPaymentType = ref<'bank_transfer' | 'qris'>('bank_transfer')

const isSubmitting = ref(false)

const openPaymentModal = (type: 'bank_transfer' | 'qris') => {
  modalPaymentType.value = type
  isPaymentModalOpen.value = true
}

const handlePaymentSelection = (selection: { type: string; detail: string }) => {
  paymentMethod.value = selection
  isPaymentModalOpen.value = false
}

const submitOrder = async () => {
  if (!paymentMethod.value.type) {
    alert('Silakan pilih metode pembayaran terlebih dahulu.')
    return
  }
  isSubmitting.value = true
  await new Promise(resolve => setTimeout(resolve, 2000))
  
  const orderDetails = {
    orderId: `TN-${Date.now()}`,
    date: new Date().toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }),
    customer: { ...form.value },
    items: [...cart.items.value],
    subtotal: subtotal.value,
    shipping: shippingCost.value,
    total: total.value,
    payment: paymentMethod.value
  }

  router.push({ name: 'OrderSuccess', state: { order: orderDetails } })

  cart.clearCart()
  isSubmitting.value = false
}
</script>

<template>
  <div class="section-padding bg-cream-50 min-h-screen">
    <div class="container-max">
      <div class="mb-8">
        <RouterLink to="/shop" class="flex items-center text-brown-600 hover:text-orange-500 font-semibold transition-colors">
          <ArrowLeft class="w-5 h-5 mr-2" />
          Kembali ke Toko
        </RouterLink>
      </div>

      <form @submit.prevent="submitOrder">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
          <!-- Form Section -->
          <div class="lg:col-span-7 space-y-8">
            <!-- Contact Information -->
            <div class="bg-white p-6 rounded-2xl shadow-lg">
              <h2 class="text-2xl font-bold text-brown-800 mb-6">Informasi Kontak</h2>
              <div class="space-y-4">
                <div>
                  <label class="block text-brown-700 font-semibold mb-2">Alamat Email</label>
                  <input v-model="form.email" type="email" required class="w-full px-4 py-3 border border-cream-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" placeholder="email@anda.com" />
                </div>
                <div>
                  <label class="block text-brown-700 font-semibold mb-2">Nomor Telepon</label>
                  <input v-model="form.phone" type="tel" required class="w-full px-4 py-3 border border-cream-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" placeholder="+62 xxx-xxxx-xxxx" />
                </div>
              </div>
            </div>

            <!-- Shipping Address -->
            <div class="bg-white p-6 rounded-2xl shadow-lg">
              <h2 class="text-2xl font-bold text-brown-800 mb-6">Alamat Pengiriman</h2>
              <div class="space-y-4">
                <div>
                  <label class="block text-brown-700 font-semibold mb-2">Nama Lengkap</label>
                  <input v-model="form.name" type="text" required class="w-full px-4 py-3 border border-cream-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" />
                </div>
                <div>
                  <label class="block text-brown-700 font-semibold mb-2">Alamat Lengkap</label>
                  <textarea v-model="form.address" required rows="3" class="w-full px-4 py-3 border border-cream-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"></textarea>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label class="block text-brown-700 font-semibold mb-2">Kota/Kabupaten</label>
                    <input v-model="form.city" type="text" required class="w-full px-4 py-3 border border-cream-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" />
                  </div>
                  <div>
                    <label class="block text-brown-700 font-semibold mb-2">Kode Pos</label>
                    <input v-model="form.postalCode" type="text" required class="w-full px-4 py-3 border border-cream-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500" />
                  </div>
                </div>
              </div>
            </div>

             <!-- Payment Method -->
            <div class="bg-white p-6 rounded-2xl shadow-lg">
              <h2 class="text-2xl font-bold text-brown-800 mb-6">Metode Pembayaran</h2>
              <div class="space-y-4">
                <div 
                  @click="openPaymentModal('bank_transfer')"
                  :class="['p-4 border-2 rounded-xl flex items-center cursor-pointer transition-all', paymentMethod.type === 'bank_transfer' ? 'border-orange-500 bg-orange-50' : 'border-cream-300']">
                  <Banknote class="w-6 h-6 mr-4 text-brown-700" />
                  <div>
                    <span class="font-semibold text-brown-800">Transfer Bank (Virtual Account)</span>
                    <p v-if="paymentMethod.type !== 'bank_transfer'" class="text-sm text-brown-600">Pilih bank Anda (BCA, Mandiri, BRI, dll).</p>
                    <p v-else class="text-sm text-green-600 font-semibold mt-1">Terpilih: {{ paymentMethod.detail }} Virtual Account</p>
                  </div>
                </div>
                <div 
                  @click="openPaymentModal('qris')"
                  :class="['p-4 border-2 rounded-xl flex items-center cursor-pointer transition-all', paymentMethod.type === 'qris' ? 'border-orange-500 bg-orange-50' : 'border-cream-300']">
                  <Smartphone class="w-6 h-6 mr-4 text-brown-700" />
                  <div>
                    <span class="font-semibold text-brown-800">E-Wallet (QRIS)</span>
                     <p v-if="paymentMethod.type !== 'qris'" class="text-sm text-brown-600">Bayar menggunakan GoPay, OVO, Dana, dll.</p>
                     <p v-else class="text-sm text-green-600 font-semibold mt-1">Terpilih: {{ paymentMethod.detail }}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Order Summary -->
          <div class="lg:col-span-5">
            <div class="bg-white p-6 rounded-2xl shadow-lg sticky top-32">
              <h2 class="text-2xl font-bold text-brown-800 mb-6">Ringkasan Pesanan</h2>
              <div class="space-y-4 max-h-64 overflow-y-auto pr-2 mb-4 border-b pb-4">
                <div v-for="item in cart.items.value" :key="item.id" class="flex items-center space-x-4">
                  <div class="relative">
                    <img :src="item.image" :alt="item.name" class="w-16 h-16 rounded-lg object-cover" />
                    <span class="absolute -top-2 -right-2 bg-orange-500 text-white text-xs font-bold rounded-full w-5 h-5 flex items-center justify-center">{{ item.quantity }}</span>
                  </div>
                  <div class="flex-1">
                    <h3 class="font-semibold text-brown-800">{{ item.name }}</h3>
                    <p class="text-sm text-brown-600">{{ item.size }}</p>
                  </div>
                  <p class="font-semibold text-brown-700">{{ formatPrice(item.price * item.quantity) }}</p>
                </div>
              </div>

              <div class="space-y-3 mb-6">
                <div class="flex justify-between text-brown-700">
                  <span>Subtotal</span>
                  <span class="font-semibold">{{ formatPrice(subtotal) }}</span>
                </div>
                <div class="flex justify-between text-brown-700">
                  <span>Ongkos Kirim</span>
                  <span class="font-semibold">{{ formatPrice(shippingCost) }}</span>
                </div>
                <div class="flex justify-between text-xl font-bold text-brown-800 border-t pt-3 mt-3">
                  <span>Total</span>
                  <span>{{ formatPrice(total) }}</span>
                </div>
              </div>

              <button 
                type="submit"
                :disabled="isSubmitting || cart.items.value.length === 0"
                class="w-full btn-primary flex items-center justify-center text-lg"
                :class="{ 'opacity-50 cursor-not-allowed': isSubmitting || cart.items.value.length === 0 }"
              >
                <span v-if="!isSubmitting" class="flex items-center">
                  <Lock class="w-5 h-5 mr-2" />
                  Bayar Sekarang
                </span>
                <span v-else class="flex items-center">
                  <div class="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin mr-2"></div>
                  Memproses...
                </span>
              </button>
              <p class="text-xs text-center text-cream-600 mt-4">
                Dengan melanjutkan, Anda menyetujui Syarat & Ketentuan kami.
              </p>
            </div>
          </div>
        </div>
      </form>
    </div>
    <PaymentMethodModal 
      v-model="isPaymentModalOpen"
      :type="modalPaymentType"
      @select="handlePaymentSelection"
    />
  </div>
</template>
