const formatPrice = (price: number) => {
  return new Intl.NumberFormat('id-ID', {
    style: 'currency',
    currency: 'IDR',
    minimumFractionDigits: 0
  }).format(price)
}

const addToCart = (product: any) => {
  cart.addToCart({
    id: product.id,
    name: product.name,
    price: product.price,
    size: product.size,
    image: product.image
  })
}
